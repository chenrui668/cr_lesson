.container {
    width: 100%;
}
.header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 130rpx;
    background-color: #f6f5f5;
}
.back {
    display: inline-block;
    position: relative;
    left: 20rpx;
    top: -5rpx;
    width: 24rpx;
    height: 24rpx;
    border-top: 1px solid black;
    border-left: 1px solid black;
    transform-origin: 100% 0;
    transform: rotate(-45deg);
}
.header text {
    display: inline-block;
    margin-top: 64rpx;
    margin-left: 50rpx;
}
.content {
    margin-top: 130rpx;
}
.mian {
    width: 1400rpx;
    height: 1000rpx;
    border: 3px solid #e6e6e6;
    margin-top: 130rpx;
    border-radius: 20px;
    transform-origin: 50% 0;
    transform: scale(0.5);
}