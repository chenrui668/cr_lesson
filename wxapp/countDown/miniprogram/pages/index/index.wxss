.container {
    width: 100%;
}
.header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 130rpx;
    background-color: #f6f5f5;
}
.header text {
    display: block;
    margin-top: 60rpx;
    margin-left: 20rpx;
}
.content {
    margin-top: 130rpx;
}
.main {
    width: 160rpx;
    height: 160rpx;
    margin-top: 200rpx;
    border: 1px solid #e6e6e6;
    border-radius: 50%;
    text-align: center;
    /* vertical-align: middle; */
    margin-left: 50%;
    transform: translate(-50%, 0);
}
.main image {
    margin-top: 40rpx;
    width: 80rpx;
    height: 80rpx;
}
.text {
    margin-top: 30rpx;
    color: #aaaaaa;
    text-align: center;
}
.text-top {
    font-size: 20px;
}
.text-center {
    margin-top: 14rpx;
    font-size: 13px;
}
.text-foot {
    margin-top: 68rpx;
    font-size: 13px;
}
.add {
    height: 140rpx;
    width: 140rpx;
    position: fixed;
    bottom: 60rpx;
    right: 60rpx;
    border-radius: 50%;
    box-shadow: 0 2px 10px #6b6b6b;
}
.add image {
    position: relative;
    top: -5rpx;
    left: -5rpx;
    width: 150rpx;
    height: 150rpx;
}