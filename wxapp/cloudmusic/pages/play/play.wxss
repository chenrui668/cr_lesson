/* pages/play/play.wxss */
page, .body, .bg {

    height: 100%;
}
.sing-brief {
    position: absolute;
    left: 10px;
    top: 10px;
    color: #bb4e55;
}
.song-name {
    font-size: 20px;
    font-weight: 600;
}
.singer-name {
    font-size: 12px;
}
.sing-show {
    position: relative;
    width: 100%;
    height: 85%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.stick {
    position: absolute;
    top: 15%;
    left: 50%;
    width: 100px;
    height: 130px;
    transform: translate(-20%, -50%) rotate(-20deg);
    transform-origin: top;
}
.disk {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
}
.coverImage {
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
}
.coverImage.play {
    animation: rotate 15s linear infinite;
}
@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}