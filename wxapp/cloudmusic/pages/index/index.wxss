/**index.wxss**/
.head {
  width: 100%;
  height: 50px;
  background-color: #bb4e55;
  text-align: left;
  line-height: 50px;
  padding-left: 20px;
  font-size: 24px;
  color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.songList {
  width: 100%;
}
.item {
  width: 100%;
  height: 45px;
  display: flex;
  background-color: rgba(214, 113, 73, 0.089);
}
.index {
  width: 10%;
  padding: 5px;
  text-align: center;
}
.rightView {
  width: 90%;
  padding: 5px;
  border-bottom: 1px solid #ddd;
}
