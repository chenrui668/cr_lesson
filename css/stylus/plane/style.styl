$bg_color = #ffd200
html,body
    width 100%
    height 100%

.plane-page
    width 100%
    height 100%
    background-color $bg_color
    position relative
    .plane-wrapper
        position absolute
        left 20%
        top 40%
        animation undulate 8s linear infinite alternate 
        perspective 2500px
        transition 1s
        .plane
            width 100%
        .rotate-container
            position absolute
            top 50.7003%
            left 13.1%
            display inline-block
            width 27.424%
            height 14.447%
            transform-origin center center
            animation rotating .2s linear infinite reverse
            .propeller
                width 100%

// @keyframes rotating 
//     0%
//         transform rotate(0) rotateY(-38deg)
//     50%
//         transform rotate(180deg) rotateY(-38deg)
//     100%
//         transform rotate(360deg) rotateY(-38deg)  

@keyframes rotating 
    0%
        transform rotateY(-38deg) rotate(0) 
    50%
        transform rotateY(-38deg) rotate(180deg) 
    100%
        transform rotateY(-38deg) rotate(360deg)

@keyframes undulate 
    0%,50%,100%
        transform translate3d(0,0,0)
    25%
        transform translate3d(-6px,-18px,10px)
    75%
        transform translate3d(6px,10px,0)    
    
